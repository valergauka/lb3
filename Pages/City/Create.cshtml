@model lb3.Models.City

<h1>Add new city</h1>
<form method="post">
  <div class="form-group row">
	  <label>Name</label>
	  <div class="col-sm-8">
		  @Html.EditorFor(m => m.Name)
	  </div>
  </div>
  <div class="form-group row">
		<label>Code</label>
		<div class="col-sm-8">
			@Html.EditorFor(m => m.Code)
		</div>
  </div>
   <div class="form-group row">
		<label>Tariff</label>
		<div class="col-sm-8">
			@Html.EditorFor(m => m.Tariff)
		</div>
  </div>
  <div class="col-sm-8 pt-2">
	  <button type="submit">Add city</button>
  </div>
</form>