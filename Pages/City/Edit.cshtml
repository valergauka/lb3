@model lb3.Models.City
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit city</h1>
<form method="post" asp-action="Edit">
  <div class="form-group row">
	  <label>Name</label>
	  <div class="col-sm-8">
		  @Html.EditorFor(m => m.Name)
	  </div>
  </div>
  <div class="form-group row">
		<label>Code</label>
		<div class="col-sm-8">
			@Html.EditorFor(m => m.Code)
		</div>
  </div>
   <div class="form-group row">
		<label>Tariff</label>
		<div class="col-sm-8">
			@Html.EditorFor(m => m.Tariff)
		</div>
  </div>
  <div class="col-sm-8 pt-2">
	  <button type="submit">Edit city</button>
  </div>
</form>